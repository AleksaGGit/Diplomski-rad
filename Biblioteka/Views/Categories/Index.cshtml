@model IEnumerable<Biblioteka.Category>

@{
    ViewBag.Title = "Kategorije";
}

<h2>Kategorije</h2>

<p>
    @Html.ActionLink("Kreiraj novu kategoriju", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Izmeni", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.Id }) |
            @Html.ActionLink("Izbrisi", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
